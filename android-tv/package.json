{
    "name": "donguatv-android-tv",
    "version": "1.0.0",
    "description": "E视界 Android TV 版本 (使用 GeckoView 内核)",
    "scripts": {
        "postinstall": "node ./scripts/apply-geckoview.js",
        "init": "npx cap add android && npx cap sync android",
        "sync": "npx cap sync android",
        "build": "cd android && gradlew assembleDebug",
        "build:release": "cd android && gradlew assembleRelease"
    },
    "dependencies": {
        "@capacitor/android": "4.6.3",
        "@capacitor/core": "4.6.3",
        "@capacitor/status-bar": "4.1.1",
        "@web-media/capacitor-geckoview": "2.0.0"
    },
    "devDependencies": {
        "@capacitor/cli": "4.6.3"
    }
}